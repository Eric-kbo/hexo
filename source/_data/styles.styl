.text-center {
  text-align: center;
}

.site-author-image {
  background: rgb(130, 130, 130);
  background-clip: content-box;
}

.site-brand-container{
  background: rgb(211, 34, 34);
}

.headband{
  background: rgb(211, 34, 34);
}

.sidebar .sidebar-button {
  &:not(:last-child) {
    margin-bottom: 15px;
  }

  a {
    button($orange);
    border: 1px solid $orange;
    border-radius: 4px;
    // To make line-height in button mixin work
    display: inline-block;

    .fa, .fab, .far, .fas {
      margin-right: 5px;
    }

    if (($scheme == 'Pisces') or ($scheme == 'Gemini')) {
      border: 0;
      color: $orange;
      display: block;

      &:hover {
        background: none;
        border: 0;
        color: darken($orange, 20%);
      }
    }
  }
}
